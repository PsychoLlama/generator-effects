{
  "name": "effect-runtime",
  "version": "0.1.0",
  "description": "A generator runtime for effect isolation",
  "main": "src/index.js",
  "repository": "https://github.com/PsychoLlama/effect-runtime.git",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test:unit": "jest --color",
    "test:lint": "eslint src --color",
    "test:fmt": "prettier --check --color src"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "no-constant-condition": "off",
      "require-yield": "off"
    }
  },
  "browserslist": [
    "current node"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1"
  }
}
